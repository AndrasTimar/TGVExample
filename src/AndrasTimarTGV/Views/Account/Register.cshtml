@using Microsoft.AspNetCore.Mvc.Rendering
@model AndrasTimarTGV.Models.ViewModels.CreateUserViewModel

<div class="bg-primary panel-body"><h4>Register</h4></div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label >Confirm password:</label>
        <input asp-for="PasswordConfirm" class="form-control" />
    </div>
    <div class="form-group">
        <label>Language:</label>
        <div>
            <!--TODO: parse language in controller-->
            @Html.DropDownListFor(x => x.DefaultLanguage, @Model.Languages, "Choose your language")
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form> 