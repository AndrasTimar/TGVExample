@model AndrasTimarTGV.Models.ViewModels.TripViewModel
<div class="row panel">
    <form asp-action="List" method="post">
        <div class="form-group col-md-2">
            <label>Departure City</label>
            <div>
                @Html.DropDownListFor(x => x.TripSearch.FromCityId, Model.Cities, "Choose departure city")
            </div>
        </div>
        <div class="form-group col-md-2">
            <label>Destination City</label>
            <div>
                @Html.DropDownListFor(x => x.TripSearch.ToCityId, Model.Cities, "Choose destination city")
            </div>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="TripSearch.Time"></label>
            <div><span asp-validation-for="TripSearch.Time" class="text-danger"></span></div>
            <input asp-for="TripSearch.Time" type="date" value="2017-03-06" class="form-control" />
        </div>
        <div class="text-center left">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>
</div>